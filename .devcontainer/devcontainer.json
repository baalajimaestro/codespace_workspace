{ 
  "name": "baalajimaestro/codespace-kernel-workspace",
  "image": "registry.gitlab.com/baalajimaestro/codespace-kernel-workspace",
  "extensions": [
    "ms-azuretools.vscode-docker",
    "ms-vscode.cpptools",
    "eamodio.gitlens",
    "yzhang.markdown-all-in-one",
    "esbenp.prettier-vscode",
    "ms-vsliveshare.vsliveshare",
    "aleg94.share-snippet",
    "christian-kohler.path-intellisense"
  ],
  "runArgs": ["--privileged"],
  "mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
  "postCreateCommand": "bash setup-container.sh",
  "postAttachCommand": "sudo /usr/sbin/sshd; sudo chgrp docker /var/run/docker.sock",
  "forwardPorts": [2222]
}